<script>
    $('#empleado').on('change', function () {

        let nombre = $('option:selected', this).attr('data-nombre-rol')
        $('#rol-empleado').val(nombre);
    });

    function Guardar()
    {
        let model = 
        {
            IdEmpleado: $('#empleado').val(),
            Mes: $('#mes').val(),
            CantidadEntregas: parseInt($('#entregas-empleado').val()),
        }
        $.post("/Salario/Guardar", model, function (response) {
            if (response.statusCode == 200) {
                Swal.fire("Exito!", "Se ha guardado correctamente!", "success");
                location.reload();
            }
            else {
                Swal.fire("Error!", response.Msg, "error")
            }
        });
    }
    function ConsultarDetalle(id, mes)
    {
        $.get("/Salario/Invoice", { Id: id, Mes: mes}, function (response) {
            console.log(response);
        });
    }

    function FiltrarPorMes() {
        let mes = $('#filtro').val();
        $.get("/Salario/BuscarPorMes", { Mes: mes }, function (response) {
            $('#partial-view').html("");
            $('#partial-view').append(response);
        });
    }

</script>