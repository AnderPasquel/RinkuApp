@{
    Layout = "_Layout";
}
<div class="container-fluid flex-grow-1 container-p-y">
    <div class="row">
        <div class="row">
            <div class="col-10">
                <select id="filtro" class="form-control">
                    <option value="enero">Enero</option>
                    <option value="febrero">Febrero</option>
                    <option value="Marzo">Marzo</option>
                    <option value="Abril">Abril</option>
                    <option value="Mayo">Mayo</option>
                    <option value="Junio">Junio</option>
                    <option value="Julio">Julio</option>
                    <option value="Agosto">Agosto</option>
                    <option value="Septiembre">Septiembre</option>
                    <option value="Octubre">Octubre</option>
                    <option value="Noviembre">Noviembre</option>
                    <option value="Diciembre">Diciembre</option>
                </select>
            </div>
            <div class="col-2">
                <button type="button" class="btn btn-primary" onclick="FiltrarPorMes()">
                    <span class="ion ion-md-add"></span> Buscar
                </button>
            </div>
        </div>
        <h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
            <div>Salarios</div>
            <button type="button" class="btn btn-round btn-primary" data-toggle="modal" data-target="#modals-default">
                <span class="ion ion-md-add"></span> Captura de movimientos
            </button>
        </h4>
    </div>
    <div class="row">
        <div class="col-12" id="partial-view">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="text-center">Rol</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Entregas</th>
                        <th class="text-center">Mes</th>
                        <th class="text-center">Salario Base Mensual</th>
                        <th class="text-center">Salario por Entregas</th>
                        <th class="text-center">Bono por Rol</th>
                        <th class="text-center">Total</th>
                        <th class="text-center">ISR</th>
                        <th class="text-center">Vales de Despensa</th>
                        @*<th class="text-center">Acciones</th>*@
                    </tr>
                </thead>
                <tbody>
                    @if (this.ViewBag.Data.Count > 0)
                    {
                        @foreach (var record in this.ViewBag.Data)
                        {
                            <tr>
                                <td class="text-center">@record.NombreRol</td>
                                <td class="text-center">@record.Nombre</td>
                                <td class="text-center">@record.Entregas</td>
                                <td class="text-center">@record.Mes</td>
                                <td class="text-center">$@record.SalarioBaseMensual</td>
                                <td class="text-center">$@record.SalarioXEntrega</td>
                                <td class="text-center">$@record.BonoXRol</td>
                                <td class="text-center">$@record.TotalBurto</td>
                                <td class="text-center">$@record.ISR</td>
                                <td class="text-center">$@record.ValesDespensa</td>
                                @*<td class="text-center"><a data-target="#modals-invoice" data-toggle="modal" href="#" onclick="ConsultarDetalle(@record.IdEmpleado, '@record.Mes');">ver</a></td>*@
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <th colspan="3" scope="row">No se encontraro registros</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modals-default">
    <div class="modal-dialog">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Captura de movimientos
                    <br>
                    <small class="text-muted">Complete la información del siguiente formulario.</small>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group col">
                        <label class="form-label">Empleado</label>
                        <select id="empleado" class="form-control">
                            <option  value="-1">Seleccione...</option>
                            @foreach (var item in this.ViewBag.Combo)
                            {
                                <option value="@item.Id" data-rol="@item.IdRol" data-nombre-rol="@item.Rol">@item.Nombre</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="form-label">Rol</label>
                        <input id="rol-empleado" type="text" class="form-control" placeholder="" disabled>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label class="form-label">Fecha de Captura</label>   
                        <select id="mes" class="form-control">
                            <option value="enero">Enero</option>
                            <option value="febrero">Febrero</option>
                            <option value="Marzo">Marzo</option>
                            <option value="Abril">Abril</option>
                            <option value="Mayo">Mayo</option>
                            <option value="Junio">Junio</option>
                            <option value="Julio">Julio</option>
                            <option value="Agosto">Agosto</option>
                            <option value="Septiembre">Septiembre</option>
                            <option value="Octubre">Octubre</option>
                            <option value="Noviembre">Noviembre</option>
                            <option value="Diciembre">Diciembre</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <label class="form-label">Cantidad de Entregas</label>
                        <input id="entregas-empleado" type="text" class="form-control" placeholder="">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" onclick="Guardar()" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
