                        <!-- / Logo -->

                        <h4 class="text-center text-lighter font-weight-normal mt-0 mb-0">Login to Your Account</h4>

                        <!-- Form -->
                        <form id="account" method="post" class="my-5">
                            <div class="form-group">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <label asp-for="Input.Email" class="form-label"></label>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="form-label d-flex justify-content-between align-items-end">
                                    <div>Password</div>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="d-block small">Forgot password?</a>
                                </label>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center m-0">                           
                                <label asp-for="Input.RememberMe" class="custom-control custom-checkbox m-0">
                                    <input asp-for="Input.RememberMe" type="checkbox" class="custom-control-input">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>


                                <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                            </div>
                        </form>
                        <!-- / Form -->

                        <div class="text-center text-muted">
                            Don't have an account yet?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </div>

                    </div>
                </div>
            </div>
            <!-- / Form container -->

        </div>
